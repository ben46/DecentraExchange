{
  "name": "boring-solidity",
  "version": "1.3.1",
  "private": false,
  "description": "BoringSolidity",
  "files": [
    "/contracts/**/*.sol",
    "/src/contracts/*.json",
    "!/contracts/mocks/**/*",
    "typechain/**/*"
  ],
  "scripts": {
    "build": "npx tsc -b",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "test": "npx hardhat test --deploy-fixture",
    "lint": "npx gts lint",
    "format": "npx prettier --config prettier.config.js --write .",
    "clean": "npx gts clean",
    "fix": "npx gts fix",
    "console": "npx hardhat console",
    "mainnet:deploy": "hardhat --network mainnet deploy",
    "mainnet:verify": "hardhat --network mainnet etherscan-verify --solc-input --license UNLICENSED",
    "mainnet:export": "hardhat --network mainnet export",
    "ropsten:deploy": "hardhat --network ropsten deploy",
    "ropsten:verify": "hardhat --network ropsten etherscan-verify --solc-input --license UNLICENSED",
    "ropsten:export": "hardhat --network ropsten export",
    "kovan:deploy": "hardhat --network kovan deploy",
    "kovan:export": "hardhat --network kovan export",
    "kovan:verify": "hardhat --network kovan etherscan-verify --solc-input --license UNLICENSED",
    "test:coverage": "node --max-old-space-size=4096 ./node_modules/.bin/hardhat coverage",
    "test:gas": "REPORT_GAS=true npm run test",
    "certora": "certoraRun contracts\\ERC20.sol:ERC20WithSupply --verify ERC20WithSupply:test\\certora\\ERC20.spec --jar C:\\\\certora\\\\cvt.jar",
    "prettier": "npx prettier --write test/**/*.js contracts/**/*.sol",
    "solhint": "npx solhint -c .solhint.json 'contracts/**/*.sol'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boringcrypto/BoringSolidity.git"
  },
  "author": "Boring Crypto",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/boringcrypto/BoringSolidity/issues"
  },
  "homepage": "https://github.com/boringcrypto/BoringSolidity#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@tenderly/hardhat-tenderly": "1.0.12",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.15",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "dotenv": "10.0.0",
    "ethers": "5.4.1",
    "gts": "3.1.0",
    "hardhat": "^2.6.4",
    "hardhat-gas-reporter": "^1.0.4",
    "mocha": "^9.1.1",
    "prettier": "2.3.2",
    "prettier-config-solidity": "^1.5.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typechain": "5.1.2",
    "typescript": "4.3.5"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart contracts",
    "defi"
  ]
}
